datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Clients {
  appointmentsItems Appointments[]
  createdAt         DateTime       @default(now())
  email             String?
  id                String         @id @default(cuid())
  name              String?
  phone             String?
  updatedAt         DateTime       @updatedAt
}

model Properties {
  address               String?
  agentAssignmentsItems AgentAssignments[]
  createdAt             DateTime                 @default(now())
  id                    String                   @id @default(cuid())
  price                 Float?
  size                  Int?
  status                EnumPropertiesStatus?
  typeField             EnumPropertiesTypeField?
  updatedAt             DateTime                 @updatedAt
}

model Appointments {
  client    Clients?  @relation(fields: [clientId], references: [id])
  clientId  String?
  createdAt DateTime  @default(now())
  date      DateTime?
  id        String    @id @default(cuid())
  notes     String?
  updatedAt DateTime  @updatedAt
}

model AgentAssignments {
  agent          String?
  assignmentDate DateTime?
  createdAt      DateTime    @default(now())
  id             String      @id @default(cuid())
  property       Properties? @relation(fields: [propertyId], references: [id])
  propertyId     String?
  updatedAt      DateTime    @updatedAt
}

enum EnumPropertiesStatus {
  Option1
}

enum EnumPropertiesTypeField {
  Option1
}
